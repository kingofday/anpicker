{
    "compilerOptions": {
        "types": ["node"],
        "outDir": "dist/esm",
        "module": "esnext",
        "target": "es6",
        "jsx": "react-jsx",
        "declaration": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true
    },
    "hooks": ["copy-files"],
    "include": ["src/**/*"],
    "exclude": ["node_modules","demo"]
}
